*.tfvars
*.tfvars.json

# Ignore override files as they are usually used for local overrides
override.tf
override.tf.json
*_override.tf
*_override.tf.json

# Ignore CLI configuration files
.terraformrc
terraform.rc

# Ignore lock files
.terraform.lock.hcl

# Ignore plan files
*.tfplan

# Ignore environment files
.env

# Ignore IDE specific files
.idea/
.vscode/
*.swp
*.swo

# Ignore local backend configuration
backend.tf

# Ignore sensitive files
secrets.auto.tfvars
*.pem
*.p12
*.crt
*.key
*.pub

# Ignore logs
*.log
