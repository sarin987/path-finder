# ======================
# Application Settings
# ======================
NODE_ENV=development
PORT=5000
TZ=UTC

# ======================
# Database Configuration
# ======================
MYSQL_HOST=mysql
MYSQL_PORT=3306
MYSQL_DATABASE=emergency_db
MYSQL_USER=emergency_user
MYSQL_PASSWORD=your_secure_password
MYSQL_ROOT_PASSWORD=your_secure_root_password
MYSQL_ROOT_HOST=%

# ======================
# JWT Configuration
# ======================
JWT_SECRET=your_jwt_secret_key_change_this_in_production
JWT_EXPIRES_IN=30d
JWT_REFRESH_SECRET=your_refresh_secret_key_change_this
JWT_REFRESH_EXPIRES_IN=90d

# ======================
# API Configuration
# ======================
API_PREFIX=/api
API_VERSION=v1
API_DOCS_PATH=/api-docs

# ======================
# Frontend Configuration
# ======================
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_WS_URL=ws://localhost:5000
NEXT_PUBLIC_URL=http://localhost:3000

# ======================
# WebSocket Configuration
# ======================
WS_ENABLED=true
WS_PORT=5000
WS_PATH=/socket.io
WS_PING_TIMEOUT=60000
WS_PING_INTERVAL=25000

# ======================
# CORS Configuration
# ======================
CORS_ORIGIN=http://localhost:3000,http://localhost:8080,http://localhost:5000
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_CREDENTIALS=true
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With,Accept

# ======================
# Ngrok Configuration
# ======================
NGROK_ENABLED=false
NGROK_AUTH=your_ngrok_auth_token
NGROK_SUBDOMAIN=your-subdomain
NGROK_REGION=us

# ======================
# Logging Configuration
# ======================
LOG_LEVEL=debug
LOG_FORMAT=dev
LOG_DIR=./logs

# ======================
# Rate Limiting
# ======================
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX=100  # limit each IP to 100 requests per windowMs

# ======================
# Upload Configuration
# ======================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# ======================
# Email Configuration
# ======================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=user@example.com
SMTP_PASS=your_smtp_password
EMAIL_FROM=noreply@example.com

# ======================
# Redis Configuration (Optional)
# ======================
REDIS_ENABLED=false
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# ======================
# Cache Configuration
# ======================
CACHE_ENABLED=true
CACHE_TTL=3600  # 1 hour

# ======================
# Security Headers
# ======================
HELMET_ENABLED=true
CSP_ENABLED=true
HSTS_ENABLED=true
XSS_PROTECTION_ENABLED=true
NOSNIFF_ENABLED=true
FRAMEGUARD_ENABLED=true

# ======================
# Monitoring
# ======================
METRICS_ENABLED=true
METRICS_PATH=/metrics
METRICS_COLLECT_DEFAULT=true

# ======================
# Debug
# ======================
DEBUG=app:*,api:*,socket:*,db:*
NODE_OPTIONS=--max_old_space_size=4096

# ======================
# Feature Flags
# ======================
FEATURE_REGISTRATION=true
FEATURE_EMAIL_VERIFICATION=false
FEATURE_PASSWORD_RESET=true
FEATURE_MULTI_FACTOR_AUTH=false
FEATURE_API_DOCS=true

# ======================
# External Services
# ======================
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your-app.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-bucket.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your-sender-id
FIREBASE_APP_ID=your-app-id
FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX
