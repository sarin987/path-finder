{
  "name": "firebase-emulator",
  "version": "1.0.0",
  "description": "Firebase emulator setup for responder tracking",
  "main": "simulate-responder.js",
  "scripts": {
    "start": "firebase emulators:start --import=./emulator-data --export-on-exit",
    "simulate": "node simulate-responder.js",
    "monitor": "python3 -m http.server 8000"
  },
  "dependencies": {
    "firebase": "^9.6.0"
  },
  "devDependencies": {
    "firebase-tools": "^11.0.1"
  }
}
